(include Bool)

(== (x y) cmp x y true false false)
(> (x y) cmp x y false true false)
(< (x y) cmp x y false false true)
(>= (x y) cmp x y true true false)
(<= (x y) cmp x y true false true)

(pow (b e) match e
    (0 -> 1)
    (_ -> * b (pow b (- e 1))))

(fac x match x
    (0 -> 1)
    (_ -> * x (fac (- x 1))))